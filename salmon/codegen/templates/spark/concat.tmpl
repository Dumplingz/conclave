col_ids = set(int(c) for c in {{{COL_IDS}}})

cols = {{{INREL}}} \
    .filter(lambda x: x[1] in col_ids) \
    .map(lambda x: (0, [y for y in x[0]])) \
    .aggregateByKey([], \
        lambda acc, val: acc + val, \
        lambda acc1, acc2: acc1 + acc2)

idx = cols.keys()
col = cols.values()

# outrel stored as (column_info, col_id) tuple
{{{OUTREL}}} = col.zip(idx)

