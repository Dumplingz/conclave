	ret->cols = numCols;
	ret->mat = array;
}

void aggIfEq
	(
		obliv float **arr,
		int idx
	)
{
	obliv if (arr[idx][0] == arr[idx + 1][0])
	{
		arr[idx][1] = arr[idx][1] + arr[idx + 1][1];
		arr[idx + 1][1] = 0;
	}
}

void oddEvenAgg
	(
		obliv float **arr,
		int lo,
		int n
	)
{
	if (n > 1)
	{
		int m = n / 2;
		oddEvenAgg(arr, lo, m);
		oddEvenAgg(arr, lo + m, m);
		for (int i = 0; i < m; i++)
		{
			aggIfEq(arr, lo + i);
		}
	}
	else
	{
		aggIfEq(arr, 0);
	}
}

void _agg
	(
		intermediateMat *ret,
		obliv float **array,
		int keyCol,
		int aggCol,
		int numCols,
		int numRows
	)
{
		oddEvenSort(array, 0, numCols, 0, numRows, true);
		oddEvenAgg(array, 0, numRows);

		// TODO: move shuffle into it's own function.
		oddEvenSort(array, 1, numCols, 0, numRows, false);

		obliv int outRows = 0;

		for (int i = 0; i < numRows; i++)
		{
			obliv if (array[i][1] != 0)
			{
				outRows++;
			}
		}

		int numOutRows;
		revealOblivInt(&numOutRows, outRows, 0);

		obliv float **retArray = malloc(sizeof(*retArray) * numOutRows);

		for (int i = 0; i < numOutRows; i++)
		{
			retArray[i] = malloc(sizeof(**retArray) * numCols);
			retArray[i][0] = array[i][0];
			retArray[i][1] = array[i][1];
		}

		ret->mat = retArray;
		ret->rows = numOutRows;
		ret->cols = numCols;
}

void agg
	(
		intermediateMat *mat,
		intermediateMat *ret,
		int keyCol,
		int aggCol
	)
{
	// TODO: numCols hardcoded as 2, generalize for multiple aggCols
	int numRows = mat->rows;
	int numCols = 2;

	obliv float **array = malloc(sizeof(*array) * numRows);

	for (int i = 0; i < numRows; i++)
	{
		array[i] = malloc(sizeof(**array) * numCols);
		array[i][0] = mat->mat[i][keyCol];
		array[i][1] = mat->mat[i][aggCol];
	}

	if (!isPowerOfTwo(numRows))
	{
		int paddedVal = nextPowerOf2(numRows);
		obliv float **padded = padInput(array, numCols, numRows, paddedVal);
		_agg(ret, padded, keyCol, aggCol, numCols, paddedVal);
	}
	else
	{
		_agg(ret, array, keyCol, aggCol, numCols, numRows);
	}
}

