void loadData(float mat[ROWS][COLS], char *src)
{
  	char buffer[1024];
  	char *record, *line;

	FILE *fstream = fopen(src, "r");

	if (fstream == NULL)
	{
	      printf("\n file opening failed ");
	}

	// skip header
	fgets(buffer, sizeof(buffer), fstream);

	for (int i = 0; i < 1000; i++)
	{
		if ((line=fgets(buffer,sizeof(buffer),fstream))!=NULL)
		{
			record = strtok(line, ",");
			for (int j = 0; j < 50; j++)
			{
				if (record != NULL)
				{

					mat[i][j] = atof(record);
					record = strtok(NULL,",");

				}
				else
				{
					mat[i][j] = 1;

				}
			}
		}
		else
		{
			for (int j = 0; j < 50; j++)
			{
				mat[i][j] = 1;
			}
		}
	}

	fclose(fstream);
}
