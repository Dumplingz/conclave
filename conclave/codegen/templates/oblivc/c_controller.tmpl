            printf("|  %i|%i : %g  |", i, j, io->ret[i][j]);
        }
        printf("\n");
    }
}

int countRows(char *src, int cols)
{
	char buffer[1024];
  	char *record, *line;

	FILE *fstream = fopen(src, "r");

	if (fstream == NULL)
	{
	      printf("\n file opening failed ");
	}

	// skip header
    fgets(buffer, sizeof(buffer), fstream);

	int numRecords = 0;
	while((line=fgets(buffer,sizeof(buffer),fstream))!=NULL)
	{
		record = strtok(line, ",");
		while(record != NULL)
		{
			numRecords++;
			record = strtok(NULL,",");
		}
	}

	int numRows = numRecords / cols;

	return numRows;
}

