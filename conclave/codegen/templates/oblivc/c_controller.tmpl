void writeData(protocolIo *io)
{
	FILE *fp;
	fp = fopen(io->out, "w+");

	for (int i = 0; i < io->out_rows; i++)
	{
		for (int j = 0; j < io->out_cols - 1; j++)
		{
			fprintf(fp, "%g,", io->ret[i][j]);
		}
		fprintf(fp, "%g\n", io->ret[i][io->out_cols - 1]);
	}
	fclose(fp);
}

